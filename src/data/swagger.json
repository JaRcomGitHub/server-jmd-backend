          "name": {
            "type": "string",
            "example": "Petly"
          },
          "date": {
            "type": "string",
            "description": "date",
            "example": "12.08.2022"
          },
          "breed": {
            "type": "string",
            "example": "husky"
          },
          "comments": {
            "type": "string",
            "example": "good dog"
          },
          "photoURL": {
            "type": "string"
          }
        }
      },
      "NoticeResponses": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "Notice`s id",
            "example": "63f8635ce9466b36765fbf24"
          },
          "category": {
            "type": "string",
            "description": "type of category",
            "example": "sell"
          },
          "title": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "pet's name"
          },
          "birthdate": {
            "type": "string",
            "description": "date",
            "example": "12.08.2022"
          },
          "breed": {
            "type": "string"
          },
          "sex": {
            "type": "string",
            "description": "male or female",
            "example": "male"
          },
          "location": {
            "type": "string",
            "example": "address"
          },
          "comments": {
            "type": "string"
          },
          "price": {
            "type": "string",
            "example": 100
          },
          "imageURL": {
            "type": "string",
            "example": "url photo"
          }
        }
      },
      "NoticeRequest": {
        "type": "object",
        "required": [
          "category",
          "sex"
        ],
        "properties": {
          "category": {
            "type": "string",
            "description": "type of category",
            "example": "sell"
          },
          "title": {
            "type": "string",
            "example": "Notice's title"
          },
          "name": {
            "type": "string",
            "example": "pet's Name"
          },
          "birthdate": {
            "type": "string",
            "description": "birthdate",
            "example": "12.08.2022"
          },
          "breed": {
            "type": "string",
            "example": "husky"
          },
          "sex": {
            "type": "string",
            "description": "male or female",
            "example": "male"
          },
          "location": {
            "type": "string",
            "example": "address"
          },
          "comments": {
            "type": "string",
            "example": "text comments"
          },
          "price": {
            "type": "string",
            "example": 100
          },
          "imageURL": {
            "type": "string",
            "example": "url photo"
          }
        }
      }
    },
    "securitySchemes": {
