  "components": {
    "schemas": {
      "SignupRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          },
          "name": {
            "type": "string",
            "description": "User's Name",
            "example": "Petya"
          },
          "cityRegion": {
            "type": "string",
            "example": "Settlement"
          },
          "mobilePhone": {
            "type": "string",
            "example": "+380991234567"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "email",
          "password"
        ],
        "properties": {
          "email": {
            "type": "string",
